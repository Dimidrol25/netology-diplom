---
global:
  scrape_interval: 15s
scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: 
        - localhost:9090
  - job_name: 'dbs'
    scrape_interval: 5s
    static_configs:
      - targets:
        - db01.nowiknowit.ru:9100
        - db02.nowiknowit.ru:9100
  - job_name: 'app'
    scrape_interval: 5s
    static_configs:
      - targets:   
        - app.nowiknowit.ru:9100
  - job_name: 'nginx'
    scrape_interval: 5s
    static_configs:
      - targets:   
        - nowiknowit.ru:9100
rule_files:
  - "/etc/alertmanager/rules/alert.rules.yaml"
alerting:
  alertmanagers:
  - static_configs:
    - targets: 
      - localhost:9093
